{
  "id": "chapiviaSignup",
  "title": "A simple signup form",
  "description": "Allows users to register an account",
  "type": "object",
  "required": [
    "email",
    "name",
    "password"
  ],
  "properties": {
    "email": { 
      "type": "string", 
      "title": "email",
      "inputType": "input",
      "maxLength": 128,
      "validation": "email"
    },
    "password": { 
      "type": "string", 
      "title": "password",
      "inputType": "input",
      "maxLength": 128,
      "validation": "password",
      "style": {
        "field": {
          "width": "75%", 
          "maxHeight": "3rem", 
          "height": "3rem", 
          "justifyContent": "space-between"
        }
      }
    }
  },
  "buttons": {
    "submit": {
      "type": "submit",
      "text": "Submit",
      "cb": null
    },
    "cancel": {
      "type": "cancel",
      "text": "Cancel",
      "cb": null
    }
  },
  "style": {
    "height": "50vh",
    "justifyContent": "space-around",
    "flexDirection": "column",
    "px": "4rem"
  }
}