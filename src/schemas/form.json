{
  "id": "http://localhost:4001/src/schema/form.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Signup",
  "description": "User Signup",
  "type": "object",
  "properties": {
    "email": {
      "type": "string", 
      "$ref": "signup.json#/definitions",
      "maxLength": 128
    },
    "name": {
      "type": "string",
      "$ref": "patterns.json#/definitions/blur/properties/emptyOrSafeString",
      "maxLength": 1
    },
    "password": { 
      "type": "string", 
      "pattern": "^[a-zA-Z0-9@*#!$.]+$",
      "maxLength": 128
    },
    "confirm password": { 
      "type": "string", 
      "pattern": "^[a-zA-Z0-9@*#!$.]+$",
      "const": {"$data": "1/password"},
      "maxLength": 128
    }
  },
  "errorMessage": {
    "properties": {
      "name": "Name should only contain letters and numbers"
    }
  }
}