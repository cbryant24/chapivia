{
  "id": "http://localhost:4001/src/schema/form.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Signup",
  "description": "User Signup",
  "type": "object",
  "properties": {
    "email": {
      "blur": {
        "$ref": "patterns.json#/definitions/emptyOrEmail"
      }
    },
    "name": {
      "type": "object",
      "properties": {
        "blur": {
          "$ref": "patterns.json#/definitions/emptyOrSafeStringSpaces"
        }
      }
    },
    "password": { 
      "properties": {
        "blur": {
          "$ref": "patterns.json#/definitions/emptyOrSafeString"
        }
      }
    },
    "confirm password": { 
      "properties": {
        "blur": {
          "$ref": "patterns.json#/definitions/emptyOrSafeString"
        }
      }
    },
    "submit": {
      "properties": {
        "email": {
          "$ref": "patterns.json#/definitions/safeString"
        },
        "name": {
          "$ref": "patterns.json#/definitions/safeStringSpaces"
        },
        "password": { 
          "$ref": "patterns.json#/definitions/safeString"
        },
        "confirm password": {
          "allOf": [
            { "$ref": "patterns.json#/definitions/safeString" },
            { "const": { "$data": "1/password" }}
          ]
        }
      }
    }
  },
  "errorMessage": {
    "properties": {
      "name": "Name should only contain letters, numbers, ",
      "email": "Email should be in email format",
      "password": "Password should only contain letters, numbers, symbols: ",
      "confirmPassword": "Confirfm password should match password"
    }
  }
}