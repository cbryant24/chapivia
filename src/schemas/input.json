    "password": { 
      "type": "string", 
      "pattern": "^[a-zA-Z0-9@*#!$.]+$",
      "minLength": 1
    },
    "triviaGuess": {
      "type": "string",
      "pattern": "",
      "maxLength": 1,
      "minLength": 1
    }
  }
}