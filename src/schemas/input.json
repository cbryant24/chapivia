{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://chapivia.online/schemas/input.json",
  "title": "Input",
  "description": "User input",
  "type": "object",
  "properties": {
    "email": { 
      "type": "string",
      "pattern": "^$|^[a-zA-Z0-9@*#!$.]+$"
    },
    "name": {
      "type": "string",
      "pattern": "^$|^[a-zA-Z0-9!$.\\s]+$",
      "maxLength": 256
    },
    "password": { 
      "type": "string", 
      "pattern": "^$|^[a-zA-Z0-9@*#!$.]+$"
    },
    "confirmPassword": { 
      "type": "string", 
      "pattern": "^$|^[a-zA-Z0-9@*#!$.]+$"
    },
    "guess": {
      "type": "string",
      "pattern": "^$|^[a-dA-D]+$",
      "maxLength": 1
    }
  }
}